<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/luces">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iluminacion"
        android:background="@drawable/iluminacion"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/iluminacion" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seguridad"
        android:background="@drawable/seguridad"
        android:layout_below="@+id/iluminacion"
        android:layout_alignLeft="@+id/iluminacion"
        android:layout_alignStart="@+id/iluminacion"
        android:layout_marginTop="51dp" />

</RelativeLayout>
